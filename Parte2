CREATE TABLE Categoria (
  ID INTEGER PRIMARY KEY NOT NULL,
  Nombre TEXT
);
CREATE TABLE Producto (
  ID INTEGER PRIMARY KEY NOT NULL,
  Nombre TEXT,
  Marca TEXT,
  Categoria_id INTEGER,
  Precio_unitario INTEGER
);
CREATE TABLE Sucursal (
  ID INTEGER PRIMARY KEY NOT NULL,
  Nombre TEXT,
  Direccion TEXT
);
CREATE TABLE Stock (
    ID INTEGER PRIMARY KEY NOT NULL,
    Sucursal_id INTEGER NOT NULL,
    Producto_id INTEGER NOT NULL,
    Cantidad INTEGER,
    UNIQUE (Sucursal_id, Producto_id)
);
CREATE TABLE Cliente (
  ID INTEGER PRIMARY KEY NOT NULL,
  Nombre TEXT,
  Telefono TEXT
);
CREATE TABLE Orden (
  ID INTEGER PRIMARY KEY NOT NULL,
  Cliente_id INTEGER,
  Sucursal_id INTEGER,
  Fecha TEXT,
  Total INTEGER
);
CREATE TABLE Item (
  ID INTEGER PRIMARY KEY NOT NULL,
  Orden_id INTEGER,
  Producto_id INTEGER,
  Cantidad INTEGER,
  Monto_venta INTEGER
);
