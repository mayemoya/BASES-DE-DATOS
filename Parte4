select MAX(Precio_unitario) as PrecioMaximo from Producto
select MIN(Precio_unitario) as PrecioMinimo from Producto
select AVG(Precio_unitario) as PrecioPromedio from Producto
select SUM(Cantidad) as Total from Stock
SELECT cliente_id, SUM(total) AS total_ventas
FROM Orden
GROUP BY cliente_id;
